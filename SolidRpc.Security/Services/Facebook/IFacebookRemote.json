{
  "swagger": "2.0",
  "info": {
    "title": "Facebook.IFacebookRemote",
    "version": "1.0.0",
    "description": "Defines logic @ facebook"
  },
  "host": "graph.facebook.com",
  "schemes": [ "https" ],
  "paths": {
    "/oauth/access_token": {
      "get": {
        "description": "Obtains an access token for the application",
        "operationId": "getAccessToken",
        "parameters": [
          {
            "name": "client_id",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The app id"
          },
          {
            "name": "client_secret",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The app secret"
          },
          {
            "name": "grant_type",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The grant type - client_credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/FacebookAccessToken"
            }
          }
        }
      }
    },
    "/v4.0/debug_token": {
      "get": {
        "description": "Returns information about supplied access token",
        "operationId": "getDebugToken",
        "parameters": [
          {
            "name": "input_token",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The token to get the information about"
          },
          {
            "name": "access_token",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The access token"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/FacebookDebugToken"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "FacebookAccessToken": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string"
        },
        "token_type": {
          "type": "string"
        }
      }
    },
    "FacebookDebugToken": {
      "type": "object",
      "properties": {
        "data": {
          "$ref": "#/definitions/FacebookDebugTokenData"
        }
      }
    },
    "FacebookDebugTokenData": {
      "type": "object",
      "properties": {
        "app_id": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "data_access_expires_at": {
          "type": "integer"
        },
        "error": {
          "$ref": "#/definitions/FacebookDebugTokenDataError"
        },
        "expires_at": {
          "type": "integer"
        },
        "is_valid": {
          "type": "boolean"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "user_id": {
          "type": "integer"
        }
      }
    },
    "FacebookDebugTokenDataError": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "subcode": {
          "type": "integer"
        }
      }
    }
  }
}