{
  "swagger": "2.0",
  "info": {
    "title": "ISolidRpcSecurity",
    "version": "1.0.0",
    "description": "Defines logic for solid rpc security"
  },
  "host": "localhost",
  "schemes": [ "https" ],
  "basePath": "/SolidRpc/Security/Services",
  "paths": {
    "/LoginPage": {
      "get": {
        "description": "Returns the login page",
        "operationId": "LoginPage",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "CommonDefinitions.json#/definitions/WebContent"
            }
          }
        }
      }
    },
    "/LoginScripts": {
      "get": {
        "description": "Returns the script paths to use for logging in.",
        "operationId": "LoginScripts",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "/LoginScript": {
      "get": {
        "description": "Returns the script to embedd to enable login",
        "operationId": "LoginScript",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "CommonDefinitions.json#/definitions/WebContent"
            }
          }
        }
      }
    },
    "/LoginProviders": {
      "get": {
        "description": "Returns the status at each login provider",
        "operationId": "LoginProviders",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "CommonDefinitions.json#/definitions/LoginProvider"
              }
            }
          }
        }
      }
    },
    "/Profile": {
      "get": {
        "description": "Returns the current profile claims",
        "operationId": "Profile",
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Claim"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Claim": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}