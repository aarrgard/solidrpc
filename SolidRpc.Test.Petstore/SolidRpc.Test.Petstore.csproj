<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="petstore.json" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="SolidRpc.Swagger.DotNetTool" Version="1.0.0-build009" />
  </ItemGroup>

  <Target Name="SwaggerGenerator" BeforeTargets="Compile">
    <Exec Command="dotnet solidrpc-swaggergen --swagger2code petstore.json" WorkingDirectory="$(ProjectDir)" />
  </Target>

</Project>
