<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Services\SolidRpcOAuth2.GetAuthorizationCodeTokenAsync.html" />
    <None Remove="Services\SolidRpcOAuth2.TokenCallbackAsync.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(AssemblyName).xml" />
    <EmbeddedResource Include="Services\SolidRpcOAuth2.GetAuthorizationCodeTokenAsync.html" />
    <EmbeddedResource Include="Services\SolidRpcOAuth2.TokenCallbackAsync.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
    <PackageReference Include="SolidProxy.MicrosoftDI" Version="1.0.0-rc020" />
  </ItemGroup>

</Project>
